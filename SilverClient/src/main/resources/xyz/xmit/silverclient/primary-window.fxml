      <Pane fx:id="manageUsersPane" layoutX="134.0" prefHeight="750.0" prefWidth="866.0" visible="false">
      </Pane>
      <Pane fx:id="manageItemsPane" layoutX="134.0" prefHeight="750.0" prefWidth="866.0" visible="false">
      </Pane>
      <Pane fx:id="homePane" layoutX="134.0" prefHeight="750.0" prefWidth="866.0">
         <cursor>
            <Cursor fx:constant="WAIT" />
         </cursor>
         <TextField fx:id="tfSearchHome" onKeyTyped="#onKeyFilterDashboard" layoutX="20.0" layoutY="24.0" prefHeight="26.0" prefWidth="296.0" promptText="Search Items by title or SKU..." />
         <Button fx:id="bRefreshHome" onMouseClicked="#doRefresh" layoutX="316.0" layoutY="24.0" mnemonicParsing="false" text="Refresh" />
